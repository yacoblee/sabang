<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
						http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

	<!--  login Log Aspect -->
	<bean id="loginlog" class="or.sabang.mng.log.clg.service.LoginLogAspect" />

	<aop:config>
		<aop:aspect id="loginLogAspect" ref="loginlog">
			<!--  로그인 Method -->
<!-- 			<aop:before pointcut="execution(public * or.sabang.sys.uia.web.LoginController.actionMain(..)) " method="logLogin" /> -->
			<aop:before pointcut="execution(public * or.sabang.sys.uia.service.LoginService.actionLoginCheck(..)) " method="logLogin" />
			<!--  로그아웃 Method -->
<!-- 			<aop:before pointcut="execution(public * or.sabang.sys.uia.web.LoginController.actionLogout(..))" method="logLogout" /> -->
			<aop:before pointcut="execution(public * or.sabang.sys.uia.service.LoginService.actionLogoutCheck(..))" method="logLogout" />
		</aop:aspect>
	</aop:config>

</beans>